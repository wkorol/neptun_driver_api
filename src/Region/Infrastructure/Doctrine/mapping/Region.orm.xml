<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://raw.githubusercontent.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Region\Domain\Region" table="region">
        <id name="id" type="integer" column="id">
            <generator strategy="NONE"/>
        </id>

        <field name="name" column="name" type="string" length="255" />

        <field name="position" column="position" type="integer" unique="true" nullable="true" />
        <field name="imgLink" column="img_link" type="string" nullable="true" />

        <one-to-many field="hotels" target-entity="App\Hotel\Domain\Hotel" mapped-by="region" />
    </entity>

</doctrine-mapping>
